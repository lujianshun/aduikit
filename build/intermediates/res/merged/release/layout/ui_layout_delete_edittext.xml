<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="45dp"
              android:background="@color/color_white"
              android:gravity="center"
              android:orientation="horizontal">

    <EditText
        android:id="@+id/et_input"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@null"
        android:paddingLeft="15dp"
        android:textColor="@color/colorSecondaryTextBlack"
        android:textColorHint="@color/colorHintTextBlack"
        android:textSize="@dimen/text_mid"/>

    <com.aidai.uikit.views.FontTextView
        android:id="@+id/tv_clear"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:gravity="center"
        android:padding="5dp"
        android:layout_marginRight="5dp"
        android:textSize="18sp"
        android:text="@string/icon_fount_clear"
        android:textColor="@color/colorResourseGray"/>

</LinearLayout>
