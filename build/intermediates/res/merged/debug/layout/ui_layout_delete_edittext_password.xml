<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="45dp"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:background="@color/color_white">

    <com.aidai.uikit.views.LabelDeleteEditText
        android:id="@+id/ldl_input"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"/>

    <com.aidai.uikit.views.FontTextView
        android:id="@+id/tv_visable"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:gravity="center"
        android:paddingRight="10dp"
        android:textSize="22sp"
        android:text="@string/icon_fount_visable"
        android:visibility="visible"
        android:textColor="@color/colorResourseGray"/>

</LinearLayout>
