<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="5dip" />
            <gradient
                android:angle="0"
                android:centerColor="@color/colorBgGray"
                android:centerY="0.75"
                android:endColor="@color/colorBgGray"
                android:startColor="@color/colorBgGray" />
        </shape>
    </item>

    <item android:id="@android:id/secondaryProgress">
        <clip>
            <shape>
                <corners android:radius="5dip" />
                <gradient
                    android:startColor="@color/colorPrimaryRed"
                    android:centerColor="@color/colorPrimaryRed"
                    android:centerY="0.75"
                    android:endColor="@color/colorPrimaryRed"
                    android:angle="0"
                    />
            </shape>
        </clip>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners
                    android:radius="5dip" />
                <gradient
                    android:startColor="@color/colorPrimaryRed"
                    android:centerColor="@color/colorPrimaryRed"
                    android:centerY="0.75"
                    android:endColor="@color/colorPrimaryRed"
                    android:angle="0" />
            </shape>
        </clip>
    </item>
</layer-list>