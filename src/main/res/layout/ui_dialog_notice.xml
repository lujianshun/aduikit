<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@android:color/transparent"
              android:orientation="vertical">

    <TextView
        android:id="@+id/tv_dialog_title"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:gravity="center"
        android:text="@string/dialog_notice"
        android:textColor="@color/colorPrimaryTextBlack"
        android:textSize="@dimen/text_largest"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/divide_height"
        android:contentDescription="@string/dialog_notice"
        android:background="@color/colorDivideGray"/>

    <TextView
        android:id="@+id/tv_dialog_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/dialog_content"
        android:textSize="@dimen/text_mid"
        android:gravity="center"
        android:textColor="@color/colorSecondaryTextBlack"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="@string/dialog_cancel"
            android:textColor="@color/colorPrimaryTextBlack"
            android:background="@color/colorDialogGray"
            android:textSize="@dimen/text_largest"
            android:gravity="center"/>

        <TextView
            android:id="@+id/tv_ok"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="@string/dialog_ok"
            android:textColor="@color/color_white"
            android:background="@color/colorPrimaryRed"
            android:textSize="@dimen/text_largest"
            android:gravity="center"/>

    </LinearLayout>

</LinearLayout>
